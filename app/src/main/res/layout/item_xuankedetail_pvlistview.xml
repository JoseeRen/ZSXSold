<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_item_xuankedetail_pv"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/guodu_icon"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_item_xuankedetail_pv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:layout_weight="1"
            android:text="人力资源管理师二级（基础+专业知识）"
            android:textSize="18sp"
            android:textColor="#FF0E0E0E"
            />
        <TextView
            android:layout_width="match_parent"
            android:maxLines="1"
            android:id="@+id/tv_info_item_xuankedetail_pv"

            android:paddingBottom="12dp"
            android:text="描述信息"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_keshi_item_xuankedetail_pv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/keshi_smart"
                android:text="10课时"
                android:textColor="@color/green_text" />

            <TextView
                android:id="@+id/tv_jifen_item_xuankedetail_pv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/jifen_smart"
                android:text="500积分"

                android:textColor="@color/green_text" />

            <TextView
                android:id="@+id/tv_dianjiliang_item_xuankedetail_pv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawableLeft="@mipmap/dianjiliang_smart"
                android:text="401"
                android:textColor="@color/green_text" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>