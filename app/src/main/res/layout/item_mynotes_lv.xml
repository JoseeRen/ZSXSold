<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    >

    <ImageView
        android:layout_weight="1"
        android:id="@+id/mynotes_kechengtu"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@mipmap/list_course_no_data"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mynotes_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/mynotes_kechengtu"
            android:layout_toRightOf="@+id/mynotes_kechengtu"
            android:lines="1"
            android:text="描述信息"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/mynotes_chakan_btn"
                android:layout_width="70dp"
                android:layout_height="30dp"

                android:background="@mipmap/my_notes_chakan_back"

                android:text="查看课程"
                android:textColor="#fff"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp" />

            <TextView
                android:id="@+id/mynotes_countnotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共1条笔记"
                android:textSize="15sp"
                android:layout_alignBaseline="@+id/mynotes_chakan_btn"
                android:layout_alignBottom="@+id/mynotes_chakan_btn"
                android:layout_toRightOf="@+id/mynotes_chakan_btn"
                android:layout_toEndOf="@+id/mynotes_chakan_btn"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>