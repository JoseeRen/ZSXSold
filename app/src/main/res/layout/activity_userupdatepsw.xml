<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- S头布局 -->
    <LinearLayout style="@style/usercenter_header_llbkg">

        <ImageView
            android:id="@+id/iv_usernickname_back"
            style="@style/usercenter_header_ivback" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改密码"
            android:textColor="#fff"
            android:textSize="22sp" />
    </LinearLayout>
    <!-- E头布局 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <EditText
            android:id="@+id/et_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入原密码"
            android:paddingTop="20dp"
            android:textColor="#000" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/base_horizontal_line" />

        <EditText
            android:id="@+id/et_newpsw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入新密码"
            android:paddingTop="20dp"
            android:textColor="#000" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/base_horizontal_line" />

        <EditText
            android:id="@+id/et_renewpsw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="再次输入xin密码"
            android:paddingTop="20dp"
            android:textColor="#000" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/base_horizontal_line" />

        <TextView
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="6~14个字母或数字,不允许有空格"
            android:textColor="#a9a9a9"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_useryespsw"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认修改密码"
            android:textSize="15sp"
            android:textColor="#fff"
            android:background="#315031"/>
    </LinearLayout>

</LinearLayout>