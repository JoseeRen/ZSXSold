<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

  >
    <RelativeLayout
        android:background="@mipmap/fasong_back"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/bt_back_select"
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <EditText
        android:padding="7dp"
        android:layout_marginTop="40dp"
        android:drawablePadding="15dp"
        android:background="@null"
        android:hint="给自己起个个性的昵称吧"
        android:drawableLeft="@mipmap/zhuce_nickname_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dp"
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:padding="7dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="15dp"
        android:background="@null"
        android:hint="填写11位手机号，其他用户不可见"
        android:drawableLeft="@mipmap/zhuce_shouji_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dp"
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:padding="7dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="15dp"
        android:background="@null"
        android:hint="手机验证码"
        android:drawableLeft="@mipmap/zhuce_shouji_yanzheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dp"
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <!--<EditText-->
    <!--android:id="@+id/et_register_pwd"-->
    <!--android:inputType="textPassword"-->
    <!--android:maxLength="16"-->
    <!--android:maxLines="1"-->
    <!--android:padding="7dp"-->
    <!--android:layout_marginTop="10dp"-->
    <!--android:drawablePadding="15dp"-->
    <!--android:background="@null"-->
    <!--android:hint="6-14个字母或数字，不允许出现"-->
    <!--android:drawableLeft="@mipmap/zhuce_mima_icon"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:id="@+id/et_register_pwd"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:padding="7dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="15dp"
            android:background="@null"
            android:hint="6-14个字母或数字，不允许出现空格"
            android:drawableLeft="@mipmap/zhuce_mima_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/mc_register_pwdlook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:src="@mipmap/zhuce_mima_bukejian"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <View
        android:layout_marginTop="5dp"
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:padding="7dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="15dp"
        android:background="@null"
        android:hint="推荐码"
        android:drawableLeft="@mipmap/zhuce_tuijian_ma_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dp"
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <CheckBox

        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:background="@null"
        android:textSize="18sp"
        android:textColor="#2c831f"
        android:text="阅读并接受协议"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:background="@mipmap/fasong_back"
        android:textSize="18sp"
        android:text="注册"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
