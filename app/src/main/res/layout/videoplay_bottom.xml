<?xml version="1.0" encoding="utf-8"?><!--视频播放的底部-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_videoplay_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/videoplaybg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="8dp">

    <ImageButton

        android:id="@+id/ib_videoplay_bottom_playorpause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_toplay" />

    <TextView
        android:id="@+id/tv_videoplay_bottom_playnowtime"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="05:33"
        android:textColor="#fff" />

    <SeekBar
        android:id="@+id/sb_videoplay_bottom_progress"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxHeight="4dp"
        android:minHeight="4dp"
        android:progress="50"
        android:progressDrawable="@drawable/cus_seekbar"
        android:thumb="@mipmap/progress_cur"
        android:thumbOffset="0dp" />

    <TextView
        android:id="@+id/tv_videoplay_bottom_playcounttime"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="10:33"
        android:textColor="#fff" />

    <ImageButton
        android:id="@+id/ib_videoplay_bottom_fullscreenorsmalscreen"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@mipmap/ic_resize_tofullscreen" />
</LinearLayout>