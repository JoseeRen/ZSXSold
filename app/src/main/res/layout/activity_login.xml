<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/bt_back_select"
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_login_register"
            android:textSize="20sp"
            android:textColor="#fff"
            android:clickable="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:background="@mipmap/center_icon"
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </RelativeLayout>


    <EditText
        android:maxLines="1"
        android:layout_marginLeft="10dp"
        android:drawablePadding="7dp"
        android:background="@null"
        android:hint="请输入用户名"
        android:text="18733502093"
        android:drawableLeft="@mipmap/denglu_icon"
        android:id="@+id/et_login_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dp"
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <EditText
        android:maxLines="1"
        android:inputType="textPassword"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="7dp"
        android:background="@null"
        android:text="15933882773wei"
        android:hint="请输入密码"
        android:drawableLeft="@mipmap/denglu_mima_icon"
        android:id="@+id/et_login_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dp"
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <CheckBox
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:background="@null"
        android:textSize="20sp"
        android:textColor="#2c831f"
        android:text="记住密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/bt_login_denglu"
        android:textColor="#fff"
        android:background="@mipmap/fasong_back"
        android:textSize="18sp"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/darker_gray"
            android:text="忘记密码?"
            android:id="@+id/tv_login_findPass"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>