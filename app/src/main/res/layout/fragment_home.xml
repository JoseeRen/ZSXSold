<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/fragment_home__header" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <android.support.v4.view.ViewPager

        android:id="@+id/fragment_home_vp"
        android:layout_width="match_parent"
        android:layout_height="140dp">

    </android.support.v4.view.ViewPager>
            <RelativeLayout
                android:layout_alignBottom="@id/fragment_home_vp"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <LinearLayout
                   android:padding="10dp"
                   android:layout_centerVertical="true"
                   android:orientation="horizontal"
                   android:id="@+id/home_ll"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"></LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/textView3"
            style="@style/homefragment2017"
            android:layout_weight="1"
            android:drawableTop="@drawable/app01"
            android:text="考证达人" />

        <TextView
            android:id="@+id/textView2"
            style="@style/homefragment2017"
            android:layout_weight="1"
            android:drawableTop="@drawable/app02"
            android:text="职场精英" />

        <TextView
            android:id="@+id/textView"
            style="@style/homefragment2017"
            android:layout_weight="1"
            android:drawableTop="@drawable/app03"
            android:text="生活易趣" />

        <TextView
            android:layout_weight="1"
            style="@style/homefragment2017"
            android:drawableTop="@drawable/app04"
            android:text="企业培训"
            />
    </LinearLayout>
    <View
        android:background="@color/homefragmentline"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="200dp">
       <LinearLayout
           android:paddingLeft="6dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="70dp">
           <LinearLayout
               android:orientation="vertical"
               android:layout_weight="2.5"
               android:layout_width="0dp"
               android:layout_height="match_parent">
               <TextView
                   android:paddingTop="10dp"
                   android:textSize="15dp"
                   android:gravity="center_vertical"
                   android:text="每周百分课"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="0dp" />
               <TextView
                   android:paddingBottom="10dp"
                   android:textSize="12dp"
                   android:gravity="center_vertical"
                   android:textColor="@android:color/darker_gray"
                   android:text="每周更新三门热点课程，只需一百积分哦！ "
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="0dp" />
           </LinearLayout>
           <ImageView
               android:padding="8dp"
               android:src="@mipmap/home_baifenke"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent" />
       </LinearLayout>
       <View
           android:background="@color/homefragmentline"
           android:layout_width="match_parent"
           android:layout_height="1dp"/>
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

       </LinearLayout>
   </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>